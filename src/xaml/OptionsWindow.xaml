<Window x:Class="sidesaver.OptionsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:sidesaver"
        mc:Ignorable="d"
        Title="Sidesaver - Settings" Height="225" Width="500">
	<Window.Resources>
		<local:BackupCountConverter x:Key="BackupCountConverter"/>
	</Window.Resources>
    <Grid>
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="*"></ColumnDefinition>
		</Grid.ColumnDefinitions>
	    <Grid.RowDefinitions>
			<RowDefinition Height="*"></RowDefinition>
		    <RowDefinition Height="40"></RowDefinition>
		</Grid.RowDefinitions>

		<StackPanel Grid.Column="0" Grid.Row="0" VerticalAlignment="Top" Margin="10,10,10,0">
			<StackPanel Orientation="Horizontal">
				<Label Content="Backup count:"/>
				<Label Content="{Binding BackupCount, Converter={StaticResource BackupCountConverter}}"/>
			</StackPanel>
			<Slider TickPlacement="BottomRight"
					Minimum="0"
			        Maximum="25"
					Value="{Binding BackupCount}"
					IsSnapToTickEnabled="True"
			        TickFrequency="1"/>

			<StackPanel Orientation="Horizontal" Margin="0,5,0,0">
				<Label Content="Run in background:" VerticalAlignment="Center" MinWidth="165"/>
				<CheckBox IsChecked="{Binding RunInBackground}" VerticalAlignment="Center"></CheckBox>
			</StackPanel>

			<StackPanel Orientation="Horizontal">
				<Label Content="Override save location:" VerticalAlignment="Center" MinWidth="165"/>
				<CheckBox IsChecked="{Binding UseOverrideSaveLocation}" VerticalAlignment="Center"></CheckBox>
			</StackPanel>

			<DockPanel>
				<Button IsEnabled="{Binding UseOverrideSaveLocation}" DockPanel.Dock="Right"  Width="75" VerticalAlignment="Center" 
				        Content="Browse..." Click="BrowseButton_OnClick"/>
				<TextBox IsEnabled="{Binding UseOverrideSaveLocation}" Text="{Binding OverrideSaveLocation}" Margin="0,0,10,0" />
			</DockPanel>

		</StackPanel>
		<StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right" Margin="5">
			<Button Name="OKButton" Content="OK" Click="OKButton_OnClick" VerticalAlignment="Center" MinWidth="75" Margin="5"/>
		</StackPanel>
	</Grid>
</Window>
